# Configuración de producción - Copiar a .env y rellenar valores

# Flask
FLASK_ENV=production
SECRET_KEY=genera-una-clave-secreta-segura-aqui-usar-secrets.token_hex(32)
FLASK_APP=app.py

# Servidor
HOST=0.0.0.0
PORT=8000

# Rutas (ajustar según instalación en VPS)
UPLOAD_FOLDER=/var/www/insssep/uploads
EXPORT_FOLDER=/var/www/insssep/exports

# Límites
MAX_CONTENT_LENGTH=16777216

# Base de datos (si se agrega en futuro)
# DATABASE_URL=postgresql://user:password@localhost/insssep

# Dominio (para CORS)
ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/www/insssep/logs/app.log
